#include <stdio.h>
int main() {
  
    //carta 1
  char estado1[20];
  char codigo1[20];
  char cidade1[20];
  int populacao1;
  float area1;
  float PIB1;
  int turisticos1;


   //carta 2
  char estado2[20];
  char codigo2[20];
  char cidade2[20];
  int populacao2;
  float area2;
  float PIB2;
  int turisticos2;


    //cadastro: carta 1
   printf("cadastro da carta 1\n");
   printf("digite o estado 1(a-h): \n");
   scanf("%s", estado1);

   printf("digite o código da carta 1: \n");
   scanf("%s", codigo1);

   printf("digite o nome da cidade 1: \n");
   scanf("%s", cidade1);

   printf("digite a população 1: \n");
   scanf("%d", &populacao1);

   printf("digite a área em km2 1: \n");
   scanf("%f", &area1);

   printf("digite o PIB 1: \n");
   scanf("%f", &PIB1);

   printf("digite o número de pontos turísticos 1: \n");
   scanf("%d", &turisticos1);


    //cadastro: carta 2
   printf("cadastro da carta 2\n");
   printf("digite o estado 2(a-h): \n");
   scanf("%s", estado2);

   printf("digite o código da carta 2: \n");
   scanf("%s", codigo2);

   printf("digite o nome da cidade 2: \n");
   scanf("%s", cidade2);

   printf("digite a população 2: \n");
   scanf("%d", &populacao2);

   printf("digite a área em km2 2: \n");
   scanf("%f", &area2);

   printf("digite o PIB 2: \n");
   scanf("%f", &PIB2);

   printf("digite o número de pontos turísticos 2: \n");
   scanf("%d", &turisticos2);


    //carta 1
   printf("**dados da carta 1**\n");
   printf("estado: %s\n" , estado1);
   printf("código: %s\n" , codigo1);
   printf("cidade: %s\n" , cidade1);
   printf("população: %d\n" , populacao1);
   printf("área em km2: %.2f\n" , area1);
   printf("PIB: %.2f\n" , PIB1);
   printf("pontos turisticos: %d\n" , turisticos1);


    //carta 2
   printf("**dados da carta 2**\n");
   printf("estado: %s\n" , estado2);
   printf("código: %s\n" , codigo2);
   printf("cidade: %s\n" , cidade2);
   printf("população: %d\n" , populacao2);
   printf("área em km2: %.2f\n" , area2);
   printf("PIB: %.2f\n" , PIB2);
   printf("pontos turisticos: %d\n" , turisticos2);

   return 0;

}
