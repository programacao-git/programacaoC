#include <stdio.h>

int main (){

    // Desafio Xadrez

    int torre = 1;
    int bispo = 1;
    int rainha;
    int prabaixo, praesquerda;      // variáveis pra movimentação do cavalo

    printf("***Movimento da Rainha***\n");

    for (rainha = 1; rainha <= 8; rainha++)   // simulando o movimento da rainha usando 'for'
    {
        printf("Esqueda.\n");

    }
    
    printf("\n");


    printf("***Movimento do Bispo***\n");

    while (bispo <= 5)   // simulando o Movimento do Bispo usando 'while'
    {
        printf("Cima, direita\n"); 
        bispo++;     // incremento
    }
    
    printf("\n");
    

    printf("***Movimento da Torre***\n");

    do           // simulando o movimento da torre usando 'do-while'
    {
        printf("Direita\n");
        torre++;  // incremento

    } while (torre <= 5);

    printf("\n");

    printf("***Movimento do Cavalo***\n");
    

    // simulando o movimento do cavalo usando 'for' e 'while'
    for ( praesquerda = 0; praesquerda < 1; praesquerda++)   // loop externo
    {

        while (prabaixo < 2)    // loop interno
        {
            printf("Baixo\n");   // imprime 'baixo'
            prabaixo++;
        }

        printf("Esquerda\n");   // imprime 'esqueda'
    
    }





    return 0;

}
